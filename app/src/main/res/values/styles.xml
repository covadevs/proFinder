<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Peru</item>
        <item name="colorPrimaryDark">@color/Chocolate</item>
        <item name="colorAccent">@color/GhostWhite</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Peru</item>
        <item name="colorPrimaryDark">@color/Chocolate</item>
        <item name="colorAccent">@color/GhostWhite</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

</resources>
